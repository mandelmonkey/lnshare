{
  "version": 2,
  "buildCommand": "echo 'No build needed for static PWA'",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/test-generator",
      "destination": "/test-generator.html"
    },
    {
      "source": "/test-page",
      "destination": "/test-page.html"
    },
    {
      "source": "/clear-cache",
      "destination": "/clear-cache.html"
    }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
